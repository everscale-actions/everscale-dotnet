<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>EverscaleNet.TestSuite</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" />
    <PackageReference Include="Microsoft.Extensions.Configuration.UserSecrets" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Logging" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" />
    <PackageReference Include="Serilog.Sinks.XUnit" />
    <PackageReference Include="Testcontainers" />
    <PackageReference Include="xunit.abstractions" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\EverscaleNet.AppKit\EverscaleNet.AppKit.csproj" />
    <ProjectReference Include="..\EverscaleNet.Client\EverscaleNet.Client.csproj" />
  </ItemGroup>

  <ItemGroup Label="FilesToCopy">
    <Content Include="build\EverscaleNet.TestSuite.targets">
      <PackagePath>build</PackagePath>
    </Content>
    <Content Include="_contracts\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <PackagePath>_contracts</PackagePath>
      <Pack>true</Pack>
      <PackageCopyToOutput>true</PackageCopyToOutput>
    </Content>
  </ItemGroup>

</Project>
